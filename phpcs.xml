<?xml version="1.0"?>
<ruleset name="CodeSniffer">
    <file>src</file>
    <file>tests</file>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="p"/>
    <arg value="n"/>

    <!-- Include more sniffs for this project -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="100"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>

    <!-- Include custom sniffs located in dev\CodeSniffer\Sniffs folder -->
    <rule ref="./dev/CodeSniffer/ruleset.xml"/>
</ruleset>
